                    <TextBlock DockPanel.Dock="Top" Margin="5 0 0 0" Text="1" Height="17" />
                    <Separator DockPanel.Dock="Top"/>
                    <TextBlock DockPanel.Dock="Top" Margin="5 0 0 0" Text="2" Height="17"/>
