            <Grid Margin="-25,-20,-20,-20" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="0.02*"/>
                    <ColumnDefinition x:Name="thirdColumn2"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="100"/>
